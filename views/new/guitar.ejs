<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Post</title>
    <%- include('../partials/styles.ejs')  %> 
</head>
<body>
    <%- include('../partials/sideNav.ejs') %>
    <div class='main'>
      <%- include('../partials/topNav.ejs') %>
      <div class='h2-text'>
        <h1>Create Your Post</h1>
    </div>

    <form id='guitar-form' action=/new/guitar method='POST'>

    <div class='form-div'>
      <div>
        <label>Title:</label>
        <input type='text' name='title' required />
      </div>
    <div>
    <label>Brand</label>  
      <select name='brand' id='brand' required>
        <option value='Fender'>Fender</option>
        <option value='Gibson'>Gibson</option>
        <option value='Ibanez'>Ibanez</option>
        <option value='Taylor'>Taylor</option>
        <option value='PRS'>PRS</option>
        <option value='ESP'>ESP</option>
      </select> 
    </div>


    <div>
      <label>Year</label>   
      <input type='number' name='year' min='1950' max='2021' placeholder='2005' required>
    </div>

    <div>
    <label>Type</label>  
      <select name='type' id='type' required>
        <option value='Solid Body'>Solid Body</option>
        <option value='Hollow Body'>Hollow Body</option>
        <option value='Acoustic'>Acoustic</option>
      </select>
    </div>

    <div>
      <label>Price $</label>   
      <input type='number' name='price' required />
    </div>

    <div>
      <label>Description</label>   
      <textarea rows = "10" cols = "50" name = "description" required>
     </textarea><br>
    </div>

    <div>
      <button type='submit'>Submit</button>
    </div>
    </form>

  </div>
</div>
    
</body>
</html>