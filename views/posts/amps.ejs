<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gear Guru</title>
    <%- include('../partials/styles.ejs')  %> 
</head>
<body>
    <%- include('../partials/sideNav.ejs') %>
    <div class='main'>
      <%- include('../partials/topNav.ejs') %>
      <form action='/posts/amps' method='GET' class='searcher'>
        <div class='search-bar'>
            <input type='text' name='search' placeholder="Search All Posts" class='search-gtrs'>
            <button type='submit' class='search-btn'><i class="fa fa-search"></i></button>         
        </div>
    </form>

      <% posts.sort((a, b) => b.createdAt - a.createdAt); %>
      <% posts.sort((a, b) => b.updatedAt - a.updatedAt); %>
        <% posts.forEach(function(post) { %>

    <div class='container'>
        <div class='gtr-post'>
        <a id='link' href='/posts/amps/<%=post.id%>'><h1 class='gtr-title'><%= post.title.toUpperCase() %></h1></a> 
        <h4 id='gtr-date'><%= post.createdAt.toLocaleString() %></h2>
            <h4 id='gtr-date'>posted by <%= post.user?.username %></h4>
            <p id='gtr-des'><%= post.description %></p>
            <span id='price'>$<%= post.amp?.price %></span>
        </div>

        <div class='pic'>
            <a id='link' href='/posts/amps/<%=post.id%>'><img id='logo' src='<%= post.coverImagePath %>'></a>
        </div>

    </div>
        <% }); %>

</div>
</body>
</html>